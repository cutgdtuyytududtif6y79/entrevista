//Exercicio 2
using System;

class Program
{
    static void Main(string[] args){
        Console.WriteLine("Informe uma string:");
        string input = Console.ReadLine();

        int a = CountA(input);

        if (a > 0)
            Console.WriteLine($"A letra 'A' ou 'a' aparece {a} vezes na string.");
        else
            Console.WriteLine("A letra 'A' ou 'a' n√£o foi encontrada na string.");
    }

    static int CountA(string input){
        if (input == null)
        return 0;
        
        int a = 0;
        input = input.ToLower();

        foreach (char c in input){
            if (c == 'a')
                a++;
        }
        return a;
    }
}
